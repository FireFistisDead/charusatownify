<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - Charusat Ownify</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f8f9fa; }
    .navbar, .btn-primary, .bg-primary { background-color: rgb(0,102,179) !important; }
    .navbar .nav-link, .navbar-brand { color: #fff !important; }
    .card-title { color: rgb(0,102,179); }
  </style>
</head>
<body>

  <% var currentStatus = typeof currentStatus !== 'undefined' ? currentStatus : 'pending';
    var capStatus = currentStatus.charAt(0).toUpperCase() + currentStatus.slice(1);
    var badgeClass = currentStatus === 'pending' ? 'bg-warning text-dark' : (currentStatus === 'accepted' ? 'bg-success' : 'bg-danger');
  %>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Charusat Ownify - Admin</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/dashboard">User Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/leaderboard">Leaderboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/admin/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-4">
    <h2 class="text-center mb-4">Admin Dashboard</h2>

    <!-- Summary for current status -->
    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-center">
            <span class="fw-semibold"><%= capStatus %> Lost</span>
            <span class="badge <%= badgeClass %>"><%= lostItems.length %></span>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card shadow-sm border-0">
          <div class="card-body d-flex justify-content-between align-items-center">
            <span class="fw-semibold"><%= capStatus %> Found</span>
            <span class="badge <%= badgeClass %>"><%= foundItems.length %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Status Filter Tabs -->
    <ul class="nav nav-tabs mb-4">
      <li class="nav-item">
        <a class="nav-link <%= currentStatus==='pending' ? 'active' : '' %>" href="/admin/dashboard?status=pending">Pending</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= currentStatus==='accepted' ? 'active' : '' %>" href="/admin/dashboard?status=accepted">Accepted</a>
      </li>
      <li class="nav-item">
        <a class="nav-link <%= currentStatus==='rejected' ? 'active' : '' %>" href="/admin/dashboard?status=rejected">Rejected</a>
      </li>
    </ul>

    <!-- Lost Items -->
  <h3 class="mb-3" style="color: rgb(0,102,179);">Lost Items (<%= currentStatus.charAt(0).toUpperCase() + currentStatus.slice(1) %>)</h3>
    <div class="row g-3 mb-5">
      <% if (lostItems.length === 0) { %>
        <p>No lost items yet.</p>
      <% } else { %>
        <% lostItems.forEach(item => { %>
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <% if (item.image) { %>
                <div class="position-relative mb-2">
                  <div class="ratio ratio-1x1">
                    <img src="<%= item.image %>" alt="Item image" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;">
                  </div>
                </div>
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <p class="card-text mb-1">Location: <%= item.location %></p>
                <p class="card-text mb-1"><small class="text-muted">Reported on: <%= item.dateLost ? new Date(item.dateLost).toLocaleDateString() : '' %></small></p>
                <% if (item.reportedBy && item.reportedBy.name && item.reportedBy.email) { %>
                  <p class="card-text mb-2"><small class="text-muted">By: <%= item.reportedBy.name %> (<%= item.reportedBy.email %>)</small></p>
                <% } %>
                <% if (currentStatus === 'pending') { %>
                  <form method="POST" action="/admin/lost/<%= item._id %>/status" class="d-flex gap-2">
                    <button type="submit" name="status" value="accepted" class="btn btn-success btn-sm flex-fill">Accept</button>
                    <button type="button" onclick="confirmReject('lost', '<%= item._id %>', '<%= item.title %>')" class="btn btn-danger btn-sm flex-fill">Reject</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

    <!-- Found Items -->
  <h3 class="mb-3" style="color: rgb(0,102,179);">Found Items (<%= currentStatus.charAt(0).toUpperCase() + currentStatus.slice(1) %>)</h3>
    <div class="row g-3">
      <% if (foundItems.length === 0) { %>
        <p>No found items yet.</p>
      <% } else { %>
        <% foundItems.forEach(item => { %>
          <div class="col-md-4">
            <div class="card shadow-sm h-100">
              <% if (item.image) { %>
                <div class="position-relative mb-2">
                  <div class="ratio ratio-1x1">
                    <img src="<%= item.image %>" alt="Item image" class="img-fluid" style="object-fit: cover; width: 100%; height: 100%;">
                  </div>
                </div>
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= item.title %></h5>
                <p class="card-text mb-1">Location: <%= item.location %></p>
                <p class="card-text mb-1"><small class="text-muted">Reported on: <%= item.dateFound ? new Date(item.dateFound).toLocaleDateString() : '' %></small></p>
                <% if (item.reportedBy && item.reportedBy.name && item.reportedBy.email) { %>
                  <p class="card-text mb-2"><small class="text-muted">By: <%= item.reportedBy.name %> (<%= item.reportedBy.email %>)</small></p>
                <% } %>
                <% if (currentStatus === 'pending') { %>
                  <form method="POST" action="/admin/found/<%= item._id %>/status" class="d-flex gap-2">
                    <button type="submit" name="status" value="accepted" class="btn btn-success btn-sm flex-fill">Accept</button>
                    <button type="button" onclick="confirmReject('found', '<%= item._id %>', '<%= item.title %>')" class="btn btn-danger btn-sm flex-fill">Reject</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      <% } %>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    function confirmReject(itemType, itemId, itemTitle) {
      // Show confirmation popup
      if (confirm(`Do you want to delete this item permanently?\n\nItem: "${itemTitle}"\n\nThis action cannot be undone.`)) {
        // Create a form dynamically to submit the rejection
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/${itemType}/${itemId}/status`;
        
        // Add the status input
        const statusInput = document.createElement('input');
        statusInput.type = 'hidden';
        statusInput.name = 'status';
        statusInput.value = 'rejected';
        
        form.appendChild(statusInput);
        document.body.appendChild(form);
        form.submit();
      }
    }
  </script>
</body>
</html>
