<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title><%= item.title %> Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .navbar, .btn-primary, .bg-primary {
      background-color: rgb(0, 102, 179) !important;
    }
    .navbar .nav-link, .navbar-brand {
      color: #fff !important;
    }
    .card-title {
      color: rgb(0, 102, 179);
    }
  </style>
</head>
<body>

  <!-- Navbar (same as home) -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Charusat Ownify</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <% if (user) { %>
            <li class="nav-item"><a class="nav-link" href="/report-found">Report Found</a></li>
            <li class="nav-item"><a class="nav-link" href="/report-lost">Report Lost</a></li>
            <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
            <li class="nav-item"><a class="nav-link" href="/signup">Signup</a></li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Item details -->
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm">
          <% if (item.image && item.image.trim() !== '') { %>
            <img src="<%= item.image %>" class="card-img-top" alt="<%= item.title %>">
          <% } %>
          <div class="card-body">
            <h3 class="card-title"><%= item.title %></h3>
            <p><strong>Category:</strong> <%= item.category %></p>
            <p><strong>Description:</strong> <%= item.description %></p>
            <p><strong>Location:</strong> <%= item.location %></p>

            <% if (type === 'lost') { %>
              <p><strong>Date Lost:</strong> <%= item.dateLost ? item.dateLost.toDateString() : '' %></p>
            <% } else { %>
              <p><strong>Date Found:</strong> <%= item.dateFound ? item.dateFound.toDateString() : '' %></p>
            <% } %>

            <p>
              <strong>Status:</strong> 
              <span class="badge 
                <%= item.status==='accepted' ? 'bg-success' : 
                    (item.status==='rejected' ? 'bg-danger' : 'bg-secondary') %>">
                <%= item.status %>
              </span>
            </p>

            <hr>
            <div class="mb-0">
              <strong>Reported by:</strong><br>
              <% if (item.reportedBy && item.reportedBy.name && item.reportedBy.email) { %>
                <i class="fas fa-user"></i> <%= item.reportedBy.name %><br>
                <i class="fas fa-envelope"></i> <%= item.reportedBy.email %>
              <% } else { %>
                Unknown User
              <% } %>
            </div>
          </div>
        </div>

        <div class="text-center mt-3">
          <a href="/" class="btn btn-primary">Back to Home</a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
