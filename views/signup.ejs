<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Signup</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script>
    // Frontend validation
    function validateForm() {
      const name = document.querySelector('input[name="name"]').value.trim();
      const password = document.querySelector('input[name="password"]').value;

      // Only alphabets + space regex
      const nameRegex = /^[A-Za-z\s]+$/;

      if (!nameRegex.test(name)) {
        alert('Name must contain only letters and spaces (no numbers or special chars)');
        return false;
      }

      if (password.length < 6) {
        alert('Password must be at least 6 characters long.');
        return false;
      }

      return true; // allow submit
    }
  </script>
</head>
<body class="bg-light">
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card p-3 shadow">
        <h3 class="text-center">User Signup</h3>
        <% if(error){ %>
          <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post" action="/signup" onsubmit="return validateForm()">
          <div class="mb-3">
            <label>Name</label>
            <input type="text" name="name" class="form-control" required>
          </div>
          <div class="mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required>
          </div>
          <div class="mb-3">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required>
          </div>
          <button type="submit" class="btn btn-primary w-100">Signup</button>
        </form>

        <div class="mt-3 text-center">
          <a href="/login">Already have account? Login</a>
        </div>

        <!-- Admin login button -->
        <div class="mt-2 text-center">
          <a href="/admin/login" class="btn btn-secondary w-100">Admin Login</a>
        </div>

      </div>
    </div>
  </div>
</div>
</body>
</html>
